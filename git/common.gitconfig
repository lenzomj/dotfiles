[core]
   editor = vim
[user]
   name = "Matthew J. Lenzo"
[alias]
   lg = log --graph --oneline --decorate --all
[include]
   path = ~/.gitconfig-local
[color]
   branch = auto
   diff = auto
   interactive = auto
   status = auto
   ui = auto
[push]
   default = nothing
[credential]
   helper = cache --timeout=28800
[pull]
  rebase = true
[fetch]
  prune = true
[diff]
  tool = vimdiff
  colorMoved = zebra
[merge]
  tool = vimdiff